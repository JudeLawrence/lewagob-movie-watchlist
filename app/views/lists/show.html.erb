<div class="banner" style="background-image: url(<%= @list.image_url %>)">

  <div class="container">
      <div class="num-of-movies">
        <%= @list.movies.count %> Movies
      </div>
    <div class="banner-content pt-5">
      <h1><%= @list.name %></h1>
    </div>
  </div>
</div>

<div class="container pt-3">
  <%= link_to "Add movie", new_list_bookmark_path(@list), class:"btn btn-primary" %>

  <div class="movie-cards pt-3 pb-5">
    <% @list.movies.each do |movie| %>
      <%  %>

      <div class="movie-card">
        <div class="card-img" style="background-image: url(<%= movie.poster_url %>)"></div>
        <div class="card-content">
          <h2><%= movie.title %></h2>

          <%= movie.rating %> <i class="fas fa-star"></i>
          <p class="pt-3"><%= movie.overview %></p>
          <%= link_to "Remove", bookmark_path(movie.bookmarks.ids[0]), method: :delete %>
        </div>
      </div>

    <% end %>
  </div>
</div>
